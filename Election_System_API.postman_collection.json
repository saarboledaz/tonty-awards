	"item": [
		{
			"name": "Admin - Voter Management",
			"item": [
				{
					"name": "Import Voters from File",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "X-Admin-Key",
								"value": "{{ADMIN_KEY}}",
								"description": "Admin authentication key"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"filePath\": \"voters.txt\"\n}"
						},
						"url": {
							"raw": "{{BASE_URL}}/api/admin/voters/import",
							"host": [
								"{{BASE_URL}}"
							],
							"path": [
								"api",
								"admin",
								"voters",
								"import"
							]
						},
						"description": "Import voters from a text file. File format: Name,KEYCODE (one per line)"
					},
					"response": []
				},
				{
					"name": "Add Single Voter",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "X-Admin-Key",
								"value": "{{ADMIN_KEY}}",
								"description": "Admin authentication key"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"John Doe\",\n  \"keyCode\": \"ABCDEF\"\n}"
						},
						"url": {
							"raw": "{{BASE_URL}}/api/admin/voters",
							"host": [
								"{{BASE_URL}}"
							],
							"path": [
								"api",
								"admin",
								"voters"
